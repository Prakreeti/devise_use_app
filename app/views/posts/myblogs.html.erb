<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 id="posttitle">Listing Your Posts</h1>
    <% if @posts.count == 0 %>
      Create your first blog. It's easy!
    <% end %>
    <%= link_to "Create a New Blog", new_post_path %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th colspan="10">Title</th>    
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td colspan="10"><%= link_to "#{post.title}",post %></td>
            <td colspan="3"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

    

    
  

