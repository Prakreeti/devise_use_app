<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:notice] %>
      <div class="notice alert-danger"><%= flash[:notice] %></div>
    <% end %>
    <div class="search-form">
      <%= form_tag(posts_path, method: "get", id: "search-post-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Posts", value: nil %>
        <%= button_tag(type: 'submit') do %>
          <span class="glyphicon glyphicon-search"></span> 
        <% end %>
      <% end %>
    </div>
    
    <h1 id="title">Listing All Posts</h1>
    <% if @posts.any? %>
    	<div id="posts">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Posted By</th>
            </tr>
          </thead>
        </table>
      	<%= render partial: "posts/shared/all_posts", locals: {posts: @posts} %>
        <div id="infinite-scrolling">
          <%= will_paginate %>
        </div>
      </div>
    <% else %>
      No posts found
    <% end %>
  </div>
</div>
