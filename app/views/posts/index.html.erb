<div class="row">
<%= render "layouts/subscriber" %>
  <div class="col-md-6 col-md-offset-3">
    <h1 id="posttitle">Listing All Posts</h1>
    <%= will_paginate %>
      <table class="table table-hover">
        <thead>
          <tr>
              <th>Title</th>
              <td colspan="3"></td>
              <th>Posted By</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to "#{post.title}",post %></td>
              <td colspan="3"></td>
              <td>
                <% if post.user_id != current_user.id %>
                  <%= post.posted_by %>
                <% else %>
                  <%= 'me' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<%= will_paginate %>

  