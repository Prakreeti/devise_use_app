<table class="table table-hover" style="margin-top: -20px;">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}",post %></td>
        <td>
          <% if post.user_id != current_user.id %>
            <%= post.user.name %>
          <% else %>
            <%= 'me' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
