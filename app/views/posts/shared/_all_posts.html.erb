<%= will_paginate %>
<% if posts.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Posted By</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to "#{post.title}",post %></td>
          <td>
            <% if post.user_id != current_user.id %>
              <%= post.user.name %>
            <% else %>
              <%= 'me' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<p>No posts to show</p>
<% end %>
<%= will_paginate %>
