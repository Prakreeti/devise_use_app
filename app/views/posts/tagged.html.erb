<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 id="title">Listing All Posts</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th> 
          <th>Posted By</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to "#{post.title}",post %></td>
            <td>
              <% if post.user_id != current_user.id %>
                <%= post.posted_by %>
              <% else %>
                <%= 'me' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

  