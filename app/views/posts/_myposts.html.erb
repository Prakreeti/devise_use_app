<%= will_paginate %>
<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="10">Title</th>    
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td colspan="10"><%= link_to "#{post.title}",post %></td>
        <td colspan="3"></td>
      </tr>
    <% end %>
  </tbody>
  <div>
    <%= form_tag(post_myblogs_path, method: "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
      <%= button_tag(type: 'submit') do %>
        <span class="glyphicon glyphicon-search"></span> 
      <% end %>
    <% end %>
  </div>
</table>
<%= will_paginate %>