<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 id="posttitle">All Your Friends</h1>
		<%= will_paginate %>
		<table class="table table-hover">
		  <thead>
		  	<th>Friends</th>
		  </thead>
			<% @friends.each do |friend| %>
				<tr>
					<td>
						<%= User.find_by(:id => friend.id).name %>
					</td>
					<td>
						<span class="glyphicon glyphicon-user"><%= link_to "-", friend_path(friend), :method => :delete %></span>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
<%= will_paginate %>