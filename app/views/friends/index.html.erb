<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 id="title">All Your Friends</h1>
		<%= will_paginate %>
		<% if @friends.any? %>
			<table class="table table-hover">
			  <thead>
			  	<th>Friends</th>
			  </thead>
				<% @friends.each do |friend| %>
					<tr>
						<td>
							<% user = User.find_by(:id => friend.id) %>
							<%= link_to "#{user.name}", user_path(user) %>
						</td>
						<td>
							<span class="glyphicon glyphicon-user"><%= link_to "Remove", friend_path(friend), :method => :delete %></span>
						</td>
					</tr>
				<% end %>
			</table>
		<% else %>
			<p>No friends to show.</p>
		<% end %>
	</div>
</div>
<%= will_paginate %>