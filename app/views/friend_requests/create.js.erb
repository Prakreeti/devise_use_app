<% request = FriendRequest.find_by(user_id: current_user.id, friend_id: @friend.id) %>
$('#add_friend_<%= @friend.id %>').html("<%= escape_javascript(render partial: 'users/shared/remove_friend_request_link', locals: {friend: @friend, request: request})%>");
$(".notice").html("Friend Request sent to <%= @friend.name %>.").show();
$("#flash_notice").show();