<div id="wrapper_home">
	<%= link_to "Subscribe", "#", "data-toggle" => "modal", "data-target" => "#subscribers_modal", class: "btn btn-primary", id:"subscribers_div_current_user" %>
	<%= render 'subscriber' %>
	<div id="columns">
	<% if @posts.any? %>
		<% @posts.each do |post| %>
			<div class="pin box1 animated pulse">
				<div><h2 id="post-heading"><%= link_to "#{post.title}", post_path(post) %></h2></div>
				<div><%= link_to "#{post.user.name}", user_path(post.user_id) %>
				</div>
				<div><%= post.content.html_safe %></div>
				<% if post.image_file_name != nil %>
					<div><%= image_tag(post.image.url(:large)) %></div>
				<% end %>
			</div>
		<% end %>
	<% else %>
		<div id="home_image"></div>
		<p>Create your first post to see it here. Happy Blogging!</p>
	<% end %>
	</div>
</div>
