<!DOCTYPE html>
<html>
<head>
  <title>DeviseUseApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
			<%= render 'layouts/header' %>
			<% if current_user %>
			  <%= render 'layouts/leftnav' %>  
			<% end %>
			<% if user_signed_in? %>
				<p> Hello, <%= current_user.name %> <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %> </p>
				<br>
			<% end %>
			<%= yield %>
		</div>
	</div>
</body>
</html>
