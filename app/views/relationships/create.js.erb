<% relationship = Relationship.find_by(follower_id: current_user, followed_id: @user.id) %>
$('#follow_span_<%= @user.id %>').html("<%= escape_javascript(render partial: 'users/shared/unfollow_link', locals: {user: @user, relationship: relationship})%>");
$(".notice").html("You are now following <%= @user.name %>.").show();
$("#flash_notice").show();
