<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 id="title">Following</h1>
		<% if @users.any? %>
			<table class="table table-hover">
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<div class="round-image-50">
				          	<%= image_tag(user.avatar.url(:thumb)) %>
				        </div>
			        </td>
							<td>
			        	<%= link_to "#{user.name}", user_path(user) %>
			        </td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
		 <p>You follow 0 people.</p>
		<% end %>
	</div>
</div>
