<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= notice %>
    <%= alert %>
		<div id="user-profile">
			<h1 id="title"><%= @user.name %></h1>
			<h5 id="about-user">
				<span class="glyphicon glyphicon-map-marker"><span>
				<%= @user.city %>
			</h5>
			<% if !@user.about.blank? %>
				<h5 id="about-user">"<%= @user.about %>"</h5>
			<% end %>
			<div class="profile-image">
				<div class="round-image-profile">
					<%= image_tag(@user.avatar.url(:thumb)) %>
				</div>
			</div>
			<p>
				<%= link_to "Followers ", followers_user_path(@user) %>
				<span class="badge"><%= @user.followers.count %></span> |
				<%= link_to "Following", follows_user_path(@user) %>
				<span class="badge"><%= @user.follows.count %></span>
			</p>
		</div>
		<% if @posts.any? %>
			<table class="table">
				<thead>
					<th>Post</th>
				</thead>
				<tbody>
					<% @posts.includes(:user).order("updated_at DESC").each do |post| %>
						<tr>
							<td>
							<div class="box">
								<div><h2 id="post-heading"><%= link_to "#{post.title}", post_path(post) %></h2></div>
								<div><%= link_to "#{post.user.name}", user_path(post.user_id) %>
								<%= post.created_at.strftime("%I:%M%p") %></div>
								<div><%= post.content.html_safe %></div>
								<% if post.image_file_name != nil %>
									<div><%= image_tag(post.image.url(:large)) %></div>
								<% end %>
								<p class="read-more"><%= link_to "Read More", post_path(post), class: "button" %></p>
							</div>	
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			<p>There are no posts to show.</p>
		<% end %>
	<div>
</div>
