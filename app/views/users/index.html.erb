<h1 id="posttitle">Listing All Users</h1>
<%= will_paginate %>
<table class="table table-hover">
  <thead>
    <th colspan="10">Username</th> 
    <th colspan="10">Name</th>   
    <th colspan="10">City</th> 
    <th colspan="10">Facebook Profile Link</th>
    <th colspan="10">Status</th>      
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td colspan="10"><%= user.username %></td>
        <td colspan="10"><%= user.name %></td>
        <td colspan="10"><%= user.city %></td>
        <td colspan="10"><%= link_to user.fb_profile, user.fb_profile %></td>
        <% if user != current_user && (current_user.friendships.where("friend_id" => user).count == 0) && (current_user.friend_requests.where("friend_id" => user).count == 0) %>
          <td><span class="glyphicon glyphicon-user"><%= link_to "+", friend_requests_path(:friend_id => user),method: :post %></td>
        <% elsif current_user.friend_requests.where("friend_id" => user).count != 0  %>
          <% request = current_user.friend_requests.find_by(:friend_id => user.id) %>
          <td><%= link_to "Remove Request", friend_request_path(request), method: :delete %></td>
        <% elsif user != current_user && current_user.friends.where("friend_id" => user) %>
          <td><span class="glyphicon glyphicon-user"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>









